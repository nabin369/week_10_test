<div class="row">
	<div class="span6 offset4">
		<h1>Sign Up</h1>

			<%= form_for(@user) do |f| %>
				<%= render 'shared/error_message' %>
					<%= f.label :username %>
					<%= f.text_field :username %><br>

					<%= f.label :password %>
					<%= f.password_field :password %><br>

					<%= f.label :password_confirmation %>
					<%= f.password_field :password_confirmation %><br>

				<%= f.submit "Create Account" %>

			<% end %>
	</div>
</div>
